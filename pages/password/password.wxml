<!--pages/password/password.wxml-->
<image src="../image/login.jpg" mode="widthFix" class="lImg"></image>
<view class="cent">
  <view>
    <image src="../image/login.png" mode="widthFix" class="pImg"></image>
    <input type="text" placeholder="请输入手机号" class="phone" maxlength="11"></input>
    <image src="../image/login2.png" mode="widthFix" class="pimg1"></image>
  </view>
  <view>
    <image src="../image/login1.png" mode="widthFix" class="pimg2"></image>
    <input type="password" placeholder="请输入密码"></input>
  </view>
  <view>
    <image src="../image/psw.png" mode="widthFix" class="pimg3"></image>
    <input type="text" placeholder="请输入图片验证码"></input>
    <view style='position:relative;'>
      <canvas class='canvas' style="width:160rpx;height:70rpx;position:absolute;right:0rpx;bottom:10rpx;text-align: center;z-index:9999;" canvas-id="canvas" bindtap='onReady'></canvas>
    </view>
  </view>
  <view>
    <image src="../image/psw1.png" mode="widthFix" class="pimg2"></image>
    <input type="text" placeholder="请输入手机验证码"></input>
    <text class="pTxt">获取验证码</text>
  </view>
  <view class="submit">确定</view>
</view>