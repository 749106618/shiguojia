page{
  background-image: linear-gradient(to bottom, #fe9a5a,#f56740);
}
.redE{
  width: 100vw;
  height: 65vh;
  background: url('https://www.wjfresh.com/file/upload/20200514/1589420152768.png');
  background-size: 100% 100%;
  position: relative;
}
.ePo{
  position: absolute;
  left: 0;
  right: 0;
  margin: 21vh auto 0;
  padding-left:2.5vw; 
  width: 80vw;
  height: 39vh;
}
.ePoImg{
  display: inline-block;
  width: 32%;
  margin-right: 1%;
  height: 33%;
  background: url('https://www.wjfresh.com/file/upload/20200514/1589421016926.png') no-repeat;
  background-size: 100% 100%;
}
.ePoImg1{
  position: relative;
  display: inline-block;
  width: 32%;
  margin-right: 1%;
  height: 33%;
  background: url('https://www.wjfresh.com/file/upload/20200515/1589524800955.png') no-repeat;
  background-size: 100% 100%;
  text-align: center;
  line-height: 120rpx;
}
.eText{
  font-size: 34rpx;
  font-weight: bold;
  color: #c95033;
}
.eText1{
  font-size: 28rpx;
  color: #99999b;
}
.redList{
  margin-top: 2vh;
  width: 100vw;
  height: 33vh;
  background: url('https://www.wjfresh.com/file/upload/20200514/1589420626688.png') center center no-repeat;
  background-size: 94% 100%;
}
.redList>view{
  float: left;
  width: 100%;
  text-align: center;
  height: 20vh;
  margin-top: 8vh;
  overflow: auto; 
  color: #777777;
}
.redList text{
  display: block;
}