/* pages/order_list/order_list.wxss */
.tab-h {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  position: fixed;
  /* top: 80rpx; */
  top: 0;
  left: 0;
  z-index: 99;
}

.jian{
  display: flex;
  width: 100%;
  color: #5f5f5f;
  font-size: 28rpx;
}

.jian1{
  width: 100%;
  height: 30rpx;
  float: left;
}
 
.tab-item {
  text-align: center;
  display: inline-block;
  flex: 1;
  position: relative;
  color: #333;
}

.po{
  position: absolute;
  top: -10rpx;
  right: 20rpx;
  font-size: 20rpx;
}
 
.tab-item.active {
  color: #65a032;
  position: relative;
  font-size: 33rpx;
  z-index: 2;
  font-weight: bold;
}
 
.tab-item.active:after {
  content: "";
  display: block;
  height: 10rpx;
  width: 110rpx;
  background: #65a032;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: -1
}
 
.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}
 
.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}
 
.avatar .img {
  width: 100%;
  height: 100%;
}
 
.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}
 
.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}
 
.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}
 
.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}
 
.tab-content {
  padding-top: 80rpx;
  padding-bottom: 40rpx;
}
 
.scoll-h {
  height: 100%;
}


.index{
  width: 100vw;
}

.viewView{
  position: relative;
  float: left;
  width: 100%;
}

.shopTime{
  position: absolute;
  top: -30rpx;
  left: 20rpx;
  color: #333;
  font-size: 30rpx;
}

.indexList{
  float: left;
  width: 90vw;
  /* min-height: 200rpx; */
  border-radius: 40rpx;
  margin: 40rpx 5vw 0;
  box-shadow: 0 0 20rpx #d4d6da;
  padding: 10rpx 0 30rpx;
  overflow: hidden;
}

.indexList .viewView:first-child .shopImg{
  position: absolute;
  left: 20rpx;
  top: -20rpx;
}


text{
  display: block
}

span{
  display: inline-block
}

.shopRight{
  margin-left: 220rpx;
}

.shopTitle{
  color: #595959;
  font-size: 30rpx;
  margin-top: 10rpx;
  line-height: 70rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding-top: 40rpx;
}

.shopCont{
  color: #c0c0c0;
  font-size: 26rpx;
  float: left;
}
.shopquantity{
  float: right;
  margin-right: 20rpx;

}

.pric{
  float: right;
  margin-top: 25rpx;
  font-size: 30rpx;
  font-weight: 700;
  width: 100%;
  color: #333;
  text-align: right;
  margin-right: 20rpx;
}

.green{
  display: inline;
  color: #65a032;
  font-size: 28rpx;
}
.pPrice{
  display: inline;
  font-weight: bold;
  font-size: 35rpx;
}

.buttons{
  width: 100%;
  float: left;
}

.shopImg1{
