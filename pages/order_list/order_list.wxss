  height: 50rpx;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  display: inline-block;
  float: right;
  margin: 10rpx 20rpx 0 0 ;
}

.shopImg{
  float: left;
  width: 160rpx;
  height: 160rpx;
  margin: 32rpx;
}

.a{
  background: #fff;
