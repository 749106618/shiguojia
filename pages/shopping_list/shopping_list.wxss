/* pages/shopping_list/shopping_list.wxss */
.movie-container{
  display: flex;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #65a032;
  color: #65a032;
  font-size: 32rpx;
  font-weight: bold;
}

.movie-content-wrapper{
  padding-top: 50px;
}


/* 页面css */
.swiper-container {
    border-bottom-left-radius: 0rem; 
    border-bottom-right-radius: 0rem; 
    margin-left: auto;
    margin-right: auto;
    position: relative;
    overflow: hidden;
      box-shadow: 0 0 40rpx #fff; 
    /* z-index: 1; */
}
swiper-item {
  width: 100vw;
  height: 100vh;
  overflow: auto;
}
.shop_img{
  width: 100%;
}

.imgView{
  width: 90vw;
  height: 290rpx;
  margin: 20rpx auto 0;
  position: relative;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #e4e4e4;
}

