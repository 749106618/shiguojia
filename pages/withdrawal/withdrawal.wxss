/* pages/withdrawal/withdrawal.wxss */
.wview{
  width: 90vw;
  margin: 0 auto;
  margin-top: 53rpx;
  height: 640rpx;
  background: #fff;
  box-shadow: 0 0 10rpx #ededed;
  position: relative;
}

.jian{
  width: 80%;
  margin: 0 auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.color{
  width: 100%;
  background: #fbfbfb;
  height: 170rpx;
}

.wheader{
  width: 100%;
  height: 170rpx;
}

.headerImg{
  width: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}

.head_left{
  float: left;
  line-height: 170rpx;
  font-size: 28rpx;
}

.head_right{
  float: left;
  margin-left: 50px;
  line-height: 170rpx;
  font-size: 27rpx;
}

.text_1{
  font-size: 28rpx;
  line-height: 100rpx;
}

.input_view{
  position: relative;
  border-bottom: 2rpx solid #e2e2e2;
}

.text_2{
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  font-size: 60rpx;
}

.input1{
  height: 100rpx;
  padding-left: 70rpx;
  font-size: 60rpx;
  font-weight: bold
}

.text_3{
  display: block;
  float: left;
  font-size: 25rpx;
  margin-top: 25rpx;
}

.text_4{
  float: left;
  margin-top: 25rpx;
  color: #576b95;
  font-size: 25rpx;
}

.text_5{
  display: block;
  width: 100%;
  float: left;
  font-size: 25rpx;
  margin-bottom: 25rpx
}

button{
  width: 100%;
  color: #fff;
  background-color: #07c160
}

.button-hover{
  color: #eee;
  background-color: #06ae56
}