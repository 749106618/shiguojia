/* pages/after_sales_record/after_sales_record.wxss */
page{
  background: #e9e9e9;
}

.noneImg{
  width: 300rpx;
  margin: 200rpx auto;
  display: block;
}

.tab-h {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 99;
}

.jian{
  display: flex;
  width: 100%;
  color: #5f5f5f;
  font-size: 28rpx;
}
 
.tab-item {
  text-align: center;
  display: inline-block;
  flex: 1;
  position: relative;
}

.po{
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  font-size: 20rpx;
}
 
.tab-item.active {
  color: #000;
  position: relative;
  font-size: 33rpx;
  z-index: 2
}
 
.tab-item.active:after {
  content: "";
  display: block;
  height: 20rpx;
  width: 110rpx;
  background-image: linear-gradient(315deg, #fead37, #ffd85c);
  position: absolute;
  bottom: 10rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: -1
}
 
.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}
 
.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}
 
.avatar .img {
  width: 100%;
  height: 100%;
}
 
.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}
 
.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}
 
.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}
 
.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}
 
.tab-content {
  margin-top: 80rpx;
}
 
.scoll-h {
  height: 100%;
}


.index{
  width: 100vw;
}

.indexList{
  position: relative;
  width: 90%;
  height: 200rpx;
  border-radius: 40rpx;
  margin: 40rpx auto 0;
  box-shadow: 0 0 20rpx #d4d6da;
  background: #fff;

}

.shopImg{
  position: absolute;
  width: 200rpx;
  border-radius: 30rpx;
  left: 20rpx;
  top: -20rpx;
  box-shadow: 0 10rpx 10rpx #d6d6d6;
}

text{
  display: block
}

span{
  display: inline-block
}

.shopRight{
  margin-left: 240rpx;
}

.shopTitle{
  color: #595959;
  font-size: 30rpx;
  margin-top: 20rpx;
  line-height: 70rpx;
  font-weight: 700
}

.shopCont{
  color: #c0c0c0;
  font-size: 26rpx;
}

.pric{
  float: left;
  margin-top: 40rpx;
  color: #e15a52;
  font-size: 30rpx;
  font-weight: 700
}

.company{
  float: right;
  margin-top: 45rpx;
  color: #b4b4b4;
  font-size: 25rpx;
  margin-right: 150rpx;
}

.shopImg1{
  position: absolute;
  width: 80rpx;
  right: 0;
  bottom: 0rpx;
}