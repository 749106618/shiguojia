/* pages/receiving_address/receiving_address.wxss */
.cent{
  width: 100vw;
  height: 100vh;
  overflow: auto;
  background: #ffffff;
  z-index: 2;
}
.footer{
  position: fixed;
  bottom: 5vh;
  left: 0;
  right: 0;
  margin: 0 auto;
  color: #fff;
  font-size: 32rpx;
  width: 92vw;
  background: #65a032;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.noneImg{
  display: block;
  width: 350rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.addUl{
  width: 90vw;
  margin: 0 auto;
}

.addLi{
  height:150rpx;
  background: #fff;
  margin: 30rpx 0 0 0;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 0 15rpx #ececec;
  position: relative;
  z-index: 1;
}

