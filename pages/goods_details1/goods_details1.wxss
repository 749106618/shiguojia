  text-align: center;
  padding: 40rpx 0;
}
.shopTit{
  font-size: 35rpx;
  font-weight: bold;
  line-height: 50rpx;
  color: #333333;
}
.shopTex{
  font-size: 30rpx;
  color: #666666;
}
.shopP{
  margin-top: 14rpx;
}
.shopRm{
  font-size: 35rpx;
  color: #65a032;
}
.shopPric{
  font-size: 47rpx;
  font-weight: bold;
  color: #65a032;
}
.shopBut{
  background: #65a032;
  color: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: inline-block;
  margin:  25rpx;
}
