/* 底部 */
.jian{
  height: 8vh;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  border-top: 2rpx solid #e0e0e0;
  width: 100vw;
  height: 8vh;
}
.card{
  float: left;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #dcdcdc;
  text-align: center;
  position: relative;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  color: #666;
  margin-top: 2vh;
}
.cardImg{
  width: 50rpx;
  vertical-align: middle;
}
.buy,.addCard{
  float: right;
  height: 60rpx;
  width: 200rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  color: #fff;
  font-weight: bold;
  font-size: 30rpx;
  margin-top: 2vh;
  margin-right: 30rpx;
}
.addCard{
  background: #65a032;
}
.buy{
  background: linear-gradient(315deg, #fe8201, #fdb400);
}

