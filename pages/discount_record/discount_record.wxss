/* pages/discount_record/discount_record.wxss */
page{
  background: #f9f8f8
}

.header{
  position: relative;
  width: 100vw;
  height: 35vh;
  background: #3a3b4f;
  border-bottom-right-radius: 70rpx;
  border-bottom-left-radius: 70rpx;
  color: #fff;
  overflow: hidden;
}

.hpo{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 700rpx;
  height:  28vh;
  background-image: linear-gradient(315deg, #fead37, #ffd85c);
  margin: 0 auto;
  color: #fff;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
}

.hView1{
  margin: 40rpx;
}

.hTxt1{
  font-size: 30rpx;
}

.hTxt2{
  float: right;
  font-size: 30rpx;
}

.hTxt3{
  font-size: 55rpx;
  margin-left: 40rpx;
}

.hTxt4{
}

[class^=hBtn]{
  float: left;
  display:inline-block;
  width: 200rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  border: 2rpx solid #fff;
  text-align: center;
}

.hBtn1{
  margin:40rpx 20rpx 0 40rpx;
}

.hBtn3{
  margin-top:40rpx;
}

.cent{
  width: 700rpx;
  margin: 2vh auto 0 auto;
  height: 63vh;
  background: #fff;
  border-top-left-radius: 90rpx;
  border-top-right-radius: 90rpx;
  box-shadow: 0 0 10rpx #f1f1f2;
  position: relative;
}

.jian{
  position: absolute;
  top: 20rpx;
  left: 0;
  width: 100%
}

.cTop{
  float: left;
  width: 100%;
}

.cTxt1{
  font-size: 30rpx;
  float: left;
  margin: 30rpx 40rpx;
  font-weight: bold;
}

.cTxt2{
  float: right;
  margin: 30rpx 40rpx;
  color: #edb405;
}

.cNone{
  float: left;
  margin-top: 100rpx;
  text-align: center;
  width: 100%;
}

.cNone text{
  font-weight: bold;
  font-size: 30rpx;
}

.noneImg{
  display: block;
  width: 200rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}