/* pages/goods_details/goods_details.wxss */
page{
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.shopImg{
  width: 100vw;
}

.poView{
  width: 100vw;
  height: 93vh;
  position: fixed;
  top: 0;
  left: 0;
  overflow: auto;
  z-index: 1
}

.tab{
  width: 100vw;
  height: 61vh;
  position: fixed;
  bottom: -70vh;
  left: 0;
  z-index: 2;
  padding-top:20rpx;
  background: #fff;
  /* display: none; */
}

.hua1{
  animation:lanimation 0.5s ease-in-out 0s 1 alternate forwards;
}

.hua2{
  animation:lanimation1 0.5s ease-in-out 0s 1 alternate forwards;
}

@-webkit-keyframes lanimation
{
  from {bottom: -70vh;}
  to {bottom: 0;}
}

@-webkit-keyframes lanimation1
{
  from {bottom: 0;}
  to {bottom: -70vh;}
}

.footer{
  position: fixed;
  width: 100vw;
  height: 7vh;
