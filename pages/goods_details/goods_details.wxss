}

.back{
  position: fixed;
  width: 100vw;
  height: 100vh;
  filter: blur(8px);
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.3)
}

.share{
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
  z-index: 1;
  background-image: linear-gradient(315deg, #fead37, #ffd85c);
  width: 100rpx;
  height: 100rpx;
  /* line-height: 50rpx; */
  border-radius: 50%;
  text-align: center;
  font-size: 27rpx;
  color: #fff;
  box-shadow: 5rpx 5rpx 10rpx #aaaaaa;
}

.shareview{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.3);
  z-index: 3;
}

.share text{
  display: block
}

.share text:first-child{
margin-top: 14rpx;
}

.centerView{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100vw;
  text-align: center;
  margin-top: 20rpx;
  background: #fff;
  padding-top: 20rpx;
  z-index: 3;
}

.centerView view{
  flex: 1;
}

.shareImg{
  width: 50rpx;
  display: block;
  margin: 0 auto;
}

